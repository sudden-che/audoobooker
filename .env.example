# Скопируйте в .env и заполните значения
# cp .env.example .env

# Режим запуска: web | bot | both
MODE=web

# Telegram-бот (обязательно для режимов bot и both)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Параметры синтеза
VOICE=ru-RU-SvetlanaNeural
SPEED=+18%
CHUNK_SIZE=10000
MAX_CONCURRENT_TASKS=40
FFMPEG_PATH=ffmpeg
MERGE_CHUNKS=true
MAX_TEXT_FROM_MESSAGE=50000

# Параметры Silero
SILERO_LANGUAGE=ru
SILERO_MODEL_ID=v5_ru
SILERO_SPEAKER=baya
SILERO_SAMPLE_RATE=48000
SILERO_PUT_ACCENT=true
SILERO_PUT_YO=true
DEVICE=cpu

# Веб-сервер
WEB_HOST=0.0.0.0
WEB_PORT=8000
